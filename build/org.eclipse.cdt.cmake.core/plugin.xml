<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="toolChainProvider" name="CMake ToolChain File Provider" schema="schema/toolChainProvider.exsd"/>
   <extension
         id="cmakeNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.cdt.cmake.core.CMakeNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.cdt.core.buildConfigProvider">
      <provider
            class="org.eclipse.cdt.cmake.core.internal.CMakeBuildConfigurationProvider"
            id="org.eclipse.cdt.cmake.core.provider"
            natureId="org.eclipse.cdt.cmake.core.cmakeNature">
      </provider>
   </extension>
	<extension point="org.eclipse.debug.core.launchModes">
	  <launchMode
	   mode="package"
	   label="Package">
	  </launchMode>
	 </extension>
	 <extension
	     point="org.eclipse.debug.core.launchDelegates">
	     <launchDelegate
	        delegate="org.eclipse.cdt.cmake.core.internal.CMakeCoreBuildLocalNullLaunchDelegate"
	        id="org.eclipse.cdt.cmake.core.CoreBuildLocalPackage"
	        modes="package"
	        name="CMake Package"
	        sourceLocatorId="org.eclipse.cdt.debug.core.sourceLocator"
	        sourcePathComputerId="org.eclipse.cdt.debug.core.sourcePathComputer"
	        type="org.eclipse.cdt.debug.core.localCoreBuildLaunchConfigType">
	  </launchDelegate>
	  <launchDelegate
	        delegate="org.eclipse.cdt.cmake.core.internal.CMakeCoreBuildLocalRunLaunchDelegate"
	        id="org.eclipse.cdt.cmake.core.CoreBuildLocalRun"
	        modes="run"
	        name="CMake Run"
	        sourceLocatorId="org.eclipse.cdt.debug.core.sourceLocator"
	        sourcePathComputerId="org.eclipse.cdt.debug.core.sourcePathComputer"
	        type="org.eclipse.cdt.debug.core.localCoreBuildLaunchConfigType">
	  </launchDelegate>
	  <launchDelegate
	        delegate="org.eclipse.cdt.cmake.core.internal.CMakeCoreBuildLocalDebugLaunchDelegate"
	        id="org.eclipse.cdt.cmake.core.CoreBuildLocalDebug"
	        modes="debug"
	        name="CMake Debug"
	        sourceLocatorId="org.eclipse.cdt.debug.core.sourceLocator"
	        sourcePathComputerId="org.eclipse.cdt.debug.core.sourcePathComputer"
	        type="org.eclipse.cdt.debug.core.localCoreBuildLaunchConfigType">
	  </launchDelegate>
	   </extension>
</plugin>
